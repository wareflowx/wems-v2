{
  "appId": "com.wems",
  "productName": "WEMS",
  "directories": {
    "output": "dist",
    "buildResources": "build"
  },
  "files": [
    "out/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "src/db/migrations",
      "to": "migrations"
    }
  ],
  "asar": true,
  "asarUnpack": [
    "node_modules/better-sqlite3/**"
  ],
  "win": {
    "target": ["nsis"],
    "icon": "build/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "perMachine": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}
